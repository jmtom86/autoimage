                </li>
            </ul>
</div>
<div id="page-content-wrapper">
  <div class="container-fluid">
  <div class="row">
    <p><b>First Name: </b><%=@customer.first_name%></p>
    <p><b>Last Name: </b><%=@customer.last_name%></p>
    <p><b>Phone Number: </b><%=@customer.phone%></p>
  </div>
  <div class="row">
      <a href="/jobs/new/<%=@customer.id%>">Add Job</a>
  </div>
  <div class="row">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4>
            Jobs 
          </h4>
        </div>
        <table class="table table-fixed">
          <thead>
            <tr>
              <th class="col-xs-2">Make</th>
              <th class="col-xs-2">Model</th>
              <th class="col-xs-2">Year</th>
              <th class="col-xs-2">Total</th>
              <th class="col-xs-2">Date</th>
            </tr>
          </thead>
          <tbody>
    <% @customer.jobs.each do |j|%>
            <tr>
              <td class="col-xs-2"><%=j.make%></td>
              <td class="col-xs-2"><%=j.model%></td>
              <td class="col-xs-2"><%=j.year%></td>
              <td class="col-xs-2"><%=j.total%></td>
              <td class="col-xs-2"><%=j.date%></td>
            </tr>
    <% end %>
          </tbody>
        </table>
      </div>
  </div>
        </div>
  </div>
